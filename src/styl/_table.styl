@import "_variable.styl"

.text-box--table
  .breadcrumbs
    &__wrap
      width: auto
      margin-bottom: 45px
      box-shadow: none

    &__link
      color: $main_color
      letter-spacing: 0
      line-height: 42px
      text-decoration: underline
      $ultraThin()
      &:hover
        text-decoration none
        text-decoration-color: #A3DCF0

    &__item
      &:nth-child(3),
      &:last-child
        overflow: hidden
        text-overflow: ellipsis

.ranking-table
  width: 100%
  border-collapse: collapse
  border-radius: 5px
  border: 1px solid #E6E6F2
  border-top: none
  box-sizing: border-box
  thead
    th
      height: 46px
      font-size: 10px
      line-height: 16px
      font-weight: bold
      color: #ffffff
      text-transform: uppercase
      text-align: center
      padding: 0 12px
      box-sizing: border-box
      border-right: 1px solid rgba(255, 255, 255, 0.3)
      &:last-child
        border-right: none

  tbody
    td
      height: 51px
      font-size: 12px
      line-height: 16px
      font-weight: 600
      color: #0A0C0D
      padding: 0 12px
      box-sizing: border-box
      text-align: center

    tr
      background: #ffffff
      border-bottom: 1px solid #e6eef2
      &:nth-child(odd)
        background: #f2f6f8
      &:last-child
        border-bottom: none


