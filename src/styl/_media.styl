      display: none
    .mobile-only-close
      width: 80px
      display: block
      position: fixed
      top: 10px
      right: 25px
    .map-info
      padding-left: 24px
    .map-info__text-item
      margin-bottom: 0
    .map-img__wrapper
      align-items: flex-start
      overflow-x: scroll
    .map-img
      display: none
    .map-img--big
      display: block

  .map-container__zoom
