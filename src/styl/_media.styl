    display: inherit
    text-overflow: ellipsis
    vertical-align: top

  .mobile-table
    width: 100%
    margin-bottom: 16px

  .mobile-only-close
    display: none
    font-style: normal
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    text-align: center
    color: #e589a8
    text-decoration: none
    height: 41px
    text-transform: uppercase
    border-radius: 3px
    padding: 0 20px
    overflow: hidden
    font-size: 11px
    line-height: 43px
    font-weight bold
    position: fixed
    background: #ffffff
    -webkit-backface-visibility: hidden
    top: 10px
    right: 25px
    border: 1px solid #e589a8
    .icon
      margin-right: 8px
    &:hover
      border: 1px solid transparent
      background: #f8dce5
      transition: .25s

  .map-container.show
    padding-top: 20px
    padding-bottom: 20px
